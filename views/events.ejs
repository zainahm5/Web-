<!-- this is the body of Events -->
<div class="container-fluid container-fluid-custom">
    <main class="main">
        <h2>Opportunities</h2>
        <div class="search-bar">
            <input type="text" placeholder="Event title or keyword" class="search-input">
            <input type="text" placeholder="Location" class="search-input">
            <button class="search-btn">Search</button>
        
            <div>
                <% if (events && events.length > 0) { %>
                    <% events.forEach(opportunity => { %>
                        <div class="opportunity-list">
                            <div class="opportunity-card blue">
                                <div class="info">
                                    <div class="text-block">
                                        <div class="title"><%= opportunity.title %></div>
                                        <div class="subtitle"><%= opportunity.description %></div>
                                    </div>
                                </div>
                                <button class="btn">View Details</button>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p>No events available at the moment.</p>
                <% } %>
                
            </div>