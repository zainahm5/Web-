        <div>
            <a href="/signin" class="signin">Sign In</a>
            <a href="/signup" class="signup_btn">Sign Up</a>
        </div>
        <div class="toggle_btn">
            <i class="fa-solid fa-bars"></i>
        </div>

    </div>
    <div class="dropdown_menu">
        <li><a href="/">Home</a></li>
        <li><a href="/events">Events</a></li>
