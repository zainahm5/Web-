<header>
    <div class="navbar">
        <div class="logo"><a href="/">SeasonServe</a></div>
        <ul class="links">
            <li><a href="/">Home</a></li>
            <li><a href="/events">Events</a></li>
            <li><a href="/profile">Profile</a></li>
            <li><a href="/about">About</a></li>
