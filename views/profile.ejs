<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />
    
    <link rel="stylesheet" href="<%= stylePath %>" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <title><%= title %></title>
</head>
<body>
    <!-- HEADER -->
    <header>
        <div class="navbar">
            <div class="logo"><a href="<%= home %>"><%= logo %></a></div>
            <ul class="links">
                <li><a href="<%= home %>">Home</a></li>
                <li><a href="<%= opportunities %>">Opportunities</a></li>
                <li><a href="<%= account %>">Account</a></li>
            </ul>
            <div>
                <a href="<%= login %>" class="login">Login</a>
                <a href="<%= signup %>" class="signup_btn">Sign Up</a>
            </div>
            <div class="toggle_btn">
                <i class="fa-solid fa-bars"></i>
            </div>

        </div>
        <div class="dropdown_menu">
            <li><a href="<%= home %>">Home</a></li>
            <li><a href="<%= opportunities %>">Opportunities</a></li>
            <li><a href="<%= account %>">Account</a></li>
            <li><a href="<%= login %>" class="login">Login</a></li>
            <li><a href="<%= signup %>" class="signup_btn">Sign Up</a></li>
        </div>
    </header>

    <!-- PROFILE CONTENT -->
    <main>
        <section id="profile">
            <h2><%= profileTitle %></h2>
            <div class="profile-section">
                <img src="<%= profileImage %>" alt="Profile" class="profile-image">
                <div class="profile-info">
                    <div class="info-item">
                        <label for="full-name"><%= fullNameLabel %>:</label>
                        <input type="text" id="full-name" value="<%= userFullName %>">
                    </div>
                    <div class="info-item">
                        <label for="email"><%= emailLabel %>:</label>
                        <input type="email" id="email" value="<%= userEmail %>">
                    </div>
                    <div class="info-item">
                        <label for="birth-date"><%= birthDateLabel %>:</label>
                        <input type="date" id="birth-date" value="<%= userBirthDate %>">
                    </div>
                    <div class="info-item">
                        <label for="gender"><%= genderLabel %>:</label>
                        <select id="gender">
                            <option value="female" <%= userGender === 'female' ? 'selected' : '' %>>Female</option>
                            <option value="male" <%= userGender === 'male' ? 'selected' : '' %>>Male</option>
                            <option value="other" <%= userGender === 'other' ? 'selected' : '' %>>Other</option>
                        </select>
                    </div>
                </div>
            </div>
            <button type="submit" class="update-btn"><%= updateButton %></button>
        </section>
    </main>

    <!-- FOOTER -->
    <footer>
        <p>&copy; <%= currentYear %>, All Rights Reserved</p>
    </footer>

    <script>
        const toggleBtn = document.querySelector('.toggle_btn')
        const toggleBtnIcon = document.querySelector('.toggle_btn i')
        const dropDownMenu = document.querySelector('.dropdown_menu')

        toggleBtn.onclick = function () {
            dropDownMenu.classList.toggle('open')
            const isOpen = dropDownMenu.classList.contains('open')

            toggleBtnIcon.classList = isOpen
              ? 'fa-solid fa-xmark'
              : 'fa-solid fa-bars'
        }
    </script>
</body>
</html>
